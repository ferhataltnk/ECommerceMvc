                                                               data-big-image="/dailyShopTheme/img/view-slider/medium/polo-shirt-4.png">
                                                                        <img src="/dailyShopTheme/img/view-slider/thumbnail/polo-shirt-4.png">
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Modal view content -->
                                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                                        <div class="aa-product-view-content">

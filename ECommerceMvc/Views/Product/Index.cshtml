                                <ul class="aa-product-catg">

                                    <!-- start single product item -->
                                    <li>
                                        <figure>
                                            <a class="aa-product-img" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId"><img style="width: 265px; height: 300px;" src=@item.ProductImage alt="polo shirt img"></a>
